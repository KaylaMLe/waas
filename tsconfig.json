{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ESNext",
		"moduleResolution": "Node",
		"types": [
			"jest"
		],
		"lib": [
			"ES2021",
			"DOM"
		],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"scripts/__tests__/**/*",
		"coverage",
		"node_modules"
	]
}